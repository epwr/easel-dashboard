html, body {
    font-family: monospace, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
        'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
        sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    --size-small:           10px;
    --size-medium:          20px;
    --size-large:           40px;
    --size-xlarge:          80px;

    --surface:              <%= $config[:colours][:surface] %>;
    --background:           <%= $config[:colours][:background] %>;
    --accent:               <%= $config[:colours][:accent] %>;
    --on-background:        <%= $config[:colours][:on_background] %>;
    --on-surface:           <%= $config[:colours][:on_surface] %>;

    --text-size-small:      12pt;
    --text-size:            14pt;
    --text-size-large:      18pt;
    --text-size-x-large:    28pt;

    --text-weight:          300;
    --text-weight-semi-bold:450;
    --text-weight-bold:     600;

    background-color: var(--background);
    color: var(--on-background);

    font-size:      var(--text-size);
    font-weight:    var(--text-weight);
    line-height:    1;

    margin: 0;
    box-sizing: border-box;
}

*{padding: 0; margin: 0;}



.screen {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: stretch;
}

.cmd-picker {
  width: 320px;
  height: 100%;
  overflow-y: scroll;
}
.cmd-picker .command:not(:last-child) {border-bottom: solid 1px var(--accent);}

.command {
  background-color: var(--surface);
  color: var(--on-surface);
  padding: var(--size-small);
  display: flex;
  flex-direction: column;
  cursor: pointer;
}

.interface {
  margin: var(--size-large);
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: stretch;
  overflow: hidden;
}

.card {
  padding: var(--size-large);
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: stretch;
  overflow: hidden;

}

.surface{
  background-color: var(--surface);
  color: var(--on-surface);
}

.background{
  background-color: var(--background);
  color: var(--on-background);
}

.padded-bottom { padding-bottom: var(--size-medium); }

.scroll-content {
  min-height: min-content;
  overflow: auto;
}

.output-pane {max-width: calc(100vw - 320px - 6 * var(--size-large));}
