html, body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
        'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
        sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    --size-tiny:           5px;
    --size-small:           10px;
    --size-medium:          20px;
    --size-large:           40px;
    --size-xlarge:          80px;

    --surface:              <%= $config[:colours][:surface] %>;
    --background:           <%= $config[:colours][:background] %>;
    --primary:              <%= $config[:colours][:primary] %>;
    --secondary:            <%= $config[:colours][:secondary] %>;
    --on-background:        <%= $config[:colours][:on_background] %>;
    --on-surface:           <%= $config[:colours][:on_surface] %>;
    --on-primary:           <%= $config[:colours][:on_primary] %>;
    --on-secondary:         <%= $config[:colours][:on_secondary] %>;
    --shadow:               <%= $config[:colours][:shadow] %>;
    --stdout-colour:        <%= $config[:colours][:stdout_colour] %>;
    --stderr-colour:        <%= $config[:colours][:stderr_colour] %>;


    --text-size-small:      12pt;
    --text-size:            14pt;
    --text-size-large:      18pt;
    --text-size-xlarge:    28pt;

    --text-weight:          300;
    --text-weight-semi-bold:450;
    --text-weight-bold:     600;

    background-color: var(--background);
    color: var(--on-background);

    font-size:      var(--text-size);
    font-weight:    var(--text-weight);
    line-height:    1;

    margin: 0;
    box-sizing: border-box;
}
span.stderr { color: var(--stderr-colour); }
span.stdout { color: var(--stdout-colour); }

h1 {font-size: var(--text-size-xlarge); font-weight: var(--text-weight-bold);}
h2 {font-size: var(--text-size-large); font-weight: var(--text-weight-bold);}
h3 {font-size: var(--text-size-large); font-weight: var(--text-weight-semi-bold);}
h4 {font-size: var(--text-size); font-weight: var(--text-weight-semi-bold);}

a { color: inherit; text-decoration: none; }
*{padding: 0; margin: 0;}

.interface {
  height: calc(100vh - var(--size-xlarge));
  width: 100vw;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: stretch;
}

.dashboard-selector {
  width: 320px;
  height: 100%;
  overflow-y: auto;
  direction: rtl;
}

.selector-card{
  direction: ltr;
  display: flex;
  flex-direction: column;
  background-color: var(--surface);
  border-radius: var(--size-small);
  align-items: stretch;
  margin: var(--size-large);
  overflow: hidden;
  box-shadow: 0 var(--size-medium) var(--size-large) var(--shadow);
}

.card-info {
  background-color: var(--surface);
  color: var(--on-surface);
  padding: var(--size-medium);
  padding-bottom: var(--size-small);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  border-bottom: solid 1px var(--primary);
  z-index: 3;
  box-shadow: 0 0 var(--size-small) var(--shadow);
  cursor: pointer;
}
.card-info:hover { color: var(--primary); }

.card-controls {
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: baseline;
  box-shadow: inset 0 var(--size-tiny) var(--size-small) #000000;
}

.card-icon {
  flex-grow: 2;
  text-align: center;
  padding: var(--size-tiny);
  background-color: var(--primary);
  color: var(--on-primary);
}
.card-icon:hover {
  background-color: var(--secondary);
  color: var(--on-secondary);
  cursor: pointer;
}

::-webkit-scrollbar {
  width: var(--size-small);
  height: var(--size-small);
  background-color: none;
}
::-webkit-scrollbar-thumb {
    background: var(--primary);
    border-radius: var(--size-tiny);
    border: solid 2px var(--background);
}





.header {
  width: 100vw;
  height: var(--size-xlarge);
  background-color: var(--surface);
  z-index: 1;
  box-shadow: 0 0 var(--size-medium) var(--shadow);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.header-logo {
  margin-left: var(--size-large);
  color: var(--primary);
}
.on-hover-secondary:hover {
  color: var(--secondary);
}



#dashboard-wrapper {
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  align-items: stretch;
  overflow: hidden;
  border-radius: var(--size-small);
  margin: var(--size-large);
  width: calc(100vw - calc(320px + calc(3 * var(--size-small))));
  box-shadow: 0 var(--size-medium) var(--size-large) var(--shadow);
}
.dashboard-title-wrapper {
  margin: var(--size-medium);
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: baseline;
}
.dashboard-main {
  flex-grow: 2;
  flex-basis: 0;
  padding: var(--size-medium);
  background-color: var(--background);
  box-shadow: inset 0 0 var(--size-medium) var(--shadow);
  width: calc(100% - calc(4 * var(--size-medium)));
  margin: 0 var(--size-medium) 0;
}
.dashboard-footer {
  margin-top: var(--size-medium);
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  overflow: hidden;
  border-top: solid 1px var(--primary);
}
.dashboard-button {
  flex-grow: 2;
  flex-basis: 0;
  flex-shrink: 2;
  text-align: center;
  padding: var(--size-tiny) var(--size-small);
  background-color: var(--primary);
  color: var(--on-primary);
  overflow: hidden;
}
.dashboard-button:hover {
  background-color: var(--secondary);
  color: var(--on-secondary);
  cursor: pointer;
}
.top-shadow {
  position: absolute;
  width: 100%;
  transform: translate(0,calc( -1 * calc( var(--size-large))));
  height: var(--size-large);
  background-color: none;
  z-index: 50;
  box-shadow: 0 0 var(--size-small) var(--shadow);
}


.surface{ background-color: var(--surface); color: var(--on-surface); }
.background{ background-color: var(--background); color: var(--on-background); }
.scroll-content { min-height: min-content; overflow: auto; }
